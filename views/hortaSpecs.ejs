<html>
<head>
	<!-- CSS AND JQUERY FILES -->
	<link rel="stylesheet" href="/assets/bootstrap-3.3-1.7-dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="/assets/css/style.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
	<title> Horta Hidroponica!</title>
</head>
<body>

	<nav class="navbar navbar-default navCustom">
  		<div class="container-fluid">
    		<div class="navbar-header">
      			<a class="navbar-brand" href="http://localhost:3000/home">Hortas Hidroponicas</a>
    		</div>
    		<ul class="nav navbar-nav">
				<li><a href="http://localhost:3000/profile">Suas Hortas!</a></li>
				<li><a href="#">Procure</a></li>
   			 </ul>
   			<ul class="nav navbar-nav loginName navbar-right">
   				<li><a>Olá <%= user["nome"] %>!</a></li>
				<li><button id="logoutButton"><a href="/auth/logout">Logout</a></button></li>
   			</ul>
  		</div>
	</nav>


		<div class="container-fluid hortaFrame">
      <div class="row">
      <% if (horta.historico.length > 0) {%>
        <h1 class="text-center" style="margin-bottom: 10%">Histórico!</h1>
        <% horta.historico.forEach(function(h){ %>
        <div class="container">
          <div class="col-md-6">
            <div class="col-md-12">
              <h3 class="text-center">Data</h3>
              <h4 class="text-center"><%=h.data%></h4>
              <h3 class="text-center">Ph</h3>
              <h4 class="text-center"><%=h.ph%></h4>
              <h3 class="text-center">Temperatura</h3>
              <h4 class="text-center"><%=h.temperatura%></h4>
            </div>
          </div>
          <div class="col-md-6">
            <div class="col-md-12">
              <h3 class="text-center">Turbidez</h3>
              <h4 class="text-center"><%=h.turbidez%></h4>
              <h3 class="text-center">Umidade Relativa do Ar</h3>
              <h4 class="text-center"><%=h.umidadeRelAr%></h4>
              <h3 class="text-center">Vazão</h3>
              <h4 class="text-center"><%=h.vazao%></h4>
            </div>
          </div>
        </div>
        <hr>
        <% }) %>
      </div>
    <%}%>
		</div>
	
</body>
<script src="/assets/js/main.js"></script>
</html>